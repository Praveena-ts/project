@page
@model FinalProjectGroup11.Pages.Agents.EditModel

@{
    ViewData["Title"] = "Edit Agent";
}

<h2>Edit Agent</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Agent.Id" />
            <div class="form-group">
                <label asp-for="Agent.FirstName" class="control-label"></label>
                <input asp-for="Agent.FirstName" class="form-control" />
                <span asp-validation-for="Agent.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.LastName" class="control-label"></label>
                <input asp-for="Agent.LastName" class="form-control" />
                <span asp-validation-for="Agent.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.PhoneNumber" class="control-label"></label>
                <input asp-for="Agent.PhoneNumber" class="form-control" />
                <span asp-validation-for="Agent.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.EmailId" class="control-label"></label>
                <input asp-for="Agent.EmailId" class="form-control" />
                <span asp-validation-for="Agent.EmailId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.Rating" class="control-label"></label>
                <input asp-for="Agent.Rating" class="form-control" />
                <span asp-validation-for="Agent.Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.AgentDescription" class="control-label"></label>
                <textarea asp-for="Agent.AgentDescription" class="form-control"></textarea>
                <span asp-validation-for="Agent.AgentDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.LicenseNumber" class="control-label"></label>
                <input asp-for="Agent.LicenseNumber" class="form-control" />
                <span asp-validation-for="Agent.LicenseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Agent.SalesOfficeId" class="control-label"></label>
                <select asp-for="Agent.SalesOfficeId" class="form-control" asp-items="ViewBag.SalesOfficeId"></select>
                <span asp-validation-for="Agent.SalesOfficeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
