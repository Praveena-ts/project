@page
@model FinalProjectGroup11.Pages.Agents.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>List of Agents</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].EmailId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].AgentDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].LicenseNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Agent[0].SalesOffice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Agent) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgentDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LicenseNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalesOffice.Address)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
