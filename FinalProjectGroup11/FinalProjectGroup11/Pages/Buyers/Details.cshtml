@page
@model FinalProjectGroup11.Pages.Buyers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Buyer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Buyer.Budget)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Buyer.Budget)
        </dd>
    </dl>
</div>
<div>
    <h2> Assigned Dwellings</h2>
    <table class="table table-info">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Buyer.Dwellings[0].DwellingAddress)</th>
                <th>@Html.DisplayNameFor(model => model.Buyer.Dwellings[0].TotalArea)</th>
                <th>@Html.DisplayNameFor(model => model.Buyer.Dwellings[0].NumberBed)</th>
                <th>@Html.DisplayNameFor(model => model.Buyer.Dwellings[0].NumberBath)</th>
            </tr>
        </thead>

        @foreach (var item in Model.Buyer.Dwellings)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DwellingAddress)</td>
                <td>@Html.DisplayFor(modelItem => item.TotalArea)</td>
                <td>@Html.DisplayFor(modelItem => item.NumberBed)</td>
                <td>@Html.DisplayFor(modelItem => item.NumberBath)</td>
            </tr>
        }

    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Buyer.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
