@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <div class="row py-lg-3">
        <h2 class="display-4" style="color:darkblue">The keys to your home!!</h2>
    </div>
    <div class="row text-center">
        <p class="lead">Let Our Family Show Your Family the Way Home</p>
    </div>
</div>
<div class="card-group">
    <div class="card">
        <img src="~/Images/house_slide1.jpg" class="card-img-top" alt="Buy">
        <div class="card-body">
            <h5 class="card-title">Buy a Home</h5>
            <p class="card-text">Find your Dream Home from our extensive listing and powerful visualizations.We can match you with a house you will want to call home.</p>
            <a href="#" class="btn btn-primary">Search Homes</a>
        </div>
    </div>
    <div class="card">
        <img src="~/Images/house_slide2.jpg" class="card-img-top" alt="Sell">
        <div class="card-body">
            <h5 class="card-title">Sell a Home</h5>
            <p class="card-text">We can get you the best offer possible for your assets and help you navigate a successful sale.List your home with us and be ready for for the best offer.</p>
            <a href="#" class="btn btn-primary">Search Options</a>
        </div>
    </div>
    <div class="card">
        <img src="~/Images/house_slide3.jpg" class="card-img-top" alt="Rent">
        <div class="card-body">
            <h5 class="card-title">Rent a Home</h5>
            <p class="card-text">Reduce your relocation hassles with our online rental search and application experience.You can sign your lease and manage payments in the most secure way.</p>
            <a href="#" class="btn btn-primary">Search Rentals</a>
        </div>
    </div>
</div>

