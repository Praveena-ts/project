@page
@model FinalProjectGroup11.Pages.SalesOffices.ListModel

@{
    ViewData["Title"] = "List";
}

<h1>List of Sales Offices</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalesOffice[0].ManagerName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SalesOffice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ManagerName)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>
